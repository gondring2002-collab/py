  digitalWrite(dirPin, HIGH);
  digitalWrite(enablePin, LOW);

  for (int i = 0; i < steps; i++) {
    digitalWrite(stepPin, HIGH);
    delayMicroseconds(stepDelayUs);
    digitalWrite(stepPin, LOW);
    delayMicroseconds(stepDelayUs);
    currentPosition++;
    
    yield();   // <<< INI WAJIB
  }

  digitalWrite(enablePin, HIGH);
 // client.publish(topicStatus, "forward_done");
}

*/
void moveForward(int steps) {
  stopStepper = false;

  digitalWrite(dirPin, HIGH);
  digitalWrite(enablePin, LOW);

  for (int i = 0; i < steps; i++) {

    if (stopStepper) {
      Serial.println("Move Forward STOPPED");
      break;
    }

    digitalWrite(stepPin, HIGH);
    delayMicroseconds(stepDelayUs);
    digitalWrite(stepPin, LOW);
    delayMicroseconds(stepDelayUs);

    currentPosition++;

    client.loop();   // <<< WAJIB
  }

  digitalWrite(enablePin, HIGH);
}




void moveBackwardToLimit() {
  stopStepper = false;             // reset STOP
  digitalWrite(dirPin, LOW);
  digitalWrite(enablePin, LOW);

  while (digitalRead(limitSwitchPin) == HIGH) { // tunggu sampai LOW
    if (stopStepper) {
      Serial.println("Move Backward STOPPED");
      break;
    }

    digitalWrite(stepPin, HIGH);
    delayMicroseconds(stepDelayUs);
    digitalWrite(stepPin, LOW);
    delayMicroseconds(stepDelayUs);

    currentPosition--;             // <<< Penting, agar forward selanjutnya jalan
    client.loop();
  }

  digitalWrite(enablePin, HIGH);
  currentPosition = 0;             // reset posisi
  client.publish(topicStatus, "backward_done");
  Serial.println("Move Backward selesai");
}


// =========================
//          SETUP
// =========================
void setup() {
  Serial.begin(115200);
   
    // WiFi
  connectWiFi();

  // TLS insecure (NO CERTIFICATE REQUIRED)
  wifiClient.setInsecure();

  // MQTT
  client.setServer(mqttServer, mqttPort);
  client.setCallback(callback);
  connectMQTT(); 
  client.publish(topicStatus, "WIFI+MQTT Connected");

  
  pinMode(stepPin, OUTPUT);
  pinMode(dirPin, OUTPUT);
  pinMode(enablePin, OUTPUT);
  pinMode(limitSwitchPin, INPUT_PULLUP);
  pinMode(relayPin1, OUTPUT);
  pinMode(relayPin2, OUTPUT);
  pinMode(relayPin3, OUTPUT);


  digitalWrite(relayPin1, LOW);
  digitalWrite(enablePin, HIGH);

  // Homing awal
  Serial.println("Homing...");
    client.publish(topicStatus, "Homing...");
  digitalWrite(enablePin, LOW);
  digitalWrite(dirPin, LOW);

  while (digitalRead(limitSwitchPin) == HIGH) {
    digitalWrite(stepPin, HIGH);
    delayMicroseconds(stepDelayUs);
    digitalWrite(stepPin, LOW);
    delayMicroseconds(stepDelayUs);
   
  }

  digitalWrite(enablePin, HIGH);
  currentPosition = 0;
  Serial.println("Homing selesai");
   client.publish(topicStatus, "Homing selesai");
  delay(1000);
  Serial.println("Move Forward");
   client.publish(topicStatus, "Move Forward");
  moveForward(30000);
  client.publish(topicStatus, "Terbuka");
}

// =========================
//           LOOP
// =========================
void loop() {
  if (!client.connected()) connectMQTT();
  client.loop();
}
