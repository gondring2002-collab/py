#include <WiFi.h>
#include <WiFiClientSecure.h>
#include <PubSubClient.h>

// ===== CONFIG WIFI =====
const char* ssid = "Tselhome-2453";
const char* password = "72699064";

// ===== MQTT HiveMQ Cloud =====
const char* mqttServer = "f4159c80eb524405b694dc0e6a311fe4.s1.eu.hivemq.cloud";
const int mqttPort = 8883;
const char* mqttUser = "hivemq.webclient.1765435980051";
const char* mqttPass = "2:E?Q;RJ08&1cijeFbaT";

const char* topicStepper = "home/esp32/stepper";
const char* topicRelay   = "home/esp32/relay";
const char* topicStatus  = "home/esp32/status";
const char* topicMode = "home/esp32/mode";

WiFiClientSecure wifiClient;
PubSubClient client(wifiClient);

// ===== PINS =====
const int stepPin = 5;
const int dirPin = 2;
const int enablePin = 15;
const int limitSwitchPin = 19; // pullup, active LOW
const int relayPin1 = 18;
const int relayPin2 = 21;
const int relayPin3 = 22;


const int stepDelayUs = 1000;
const int maxForwardSteps = 30000;

volatile int currentPosition = 0;
volatile bool stopStepper = false;

// =========================
//   WIFI & MQTT CONNECT
// =========================
void connectWiFi() {
  Serial.println("Connecting to WiFi...");
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nWiFi connected.");
  Serial.print("IP: ");
  Serial.println(WiFi.localIP());
}

void connectMQTT() {
  while (!client.connected()) {
    Serial.println("Connecting MQTT...");
    String clientId = "ESP32-" + String(random(0xffff), HEX);

    if (client.connect(clientId.c_str(), mqttUser, mqttPass)) {
      Serial.println("MQTT connected");
      client.subscribe(topicStepper);
      client.subscribe(topicRelay);
      client.publish(topicStatus, "online");
      client.subscribe(topicMode);   // ← INI WAJIB
    } else {
      Serial.print("Failed rc=");
      Serial.println(client.state());
      delay(2000);
    }
  }
}

// =========================
//       CALLBACK MQTT
// =========================
void callback(char* topic, byte* payload, unsigned int length) {
  String msg = "";
  for (int i = 0; i < length; i++) msg += (char)payload[i];

  Serial.print("MQTT: ");
  Serial.print(topic);
  Serial.print(" => ");
  Serial.println(msg);

  // ===== STOP GLOBAL (PALING PENTING) =====
  if (msg == "Stop") {
    stopStepper = true;
    digitalWrite(enablePin, HIGH);   // disable driver
    client.publish(topicStatus, "stepper_stop");
    Serial.println("STOP RECEIVED");
    return;   // ← WAJIB
  }

  // ===== STEPPER =====
  if (String(topic) == topicStepper) {
    if (msg == "forward") {
      stopStepper = false;
      client.publish(topicStatus, "forward");
      int stepsToGo = maxForwardSteps - currentPosition;
      if (stepsToGo > 0) moveForward(stepsToGo);
    }
    else if (msg == "backward") {
      stopStepper = false;
      client.publish(topicStatus, "backward");
      moveBackwardToLimit();
    }
  }

  // ===== RELAY =====
  else if (String(topic) == topicRelay) {
    if (msg == "ON1") {
      digitalWrite(relayPin1, HIGH);
      client.publish(topicStatus, "relay_on1");
    }
    else if (msg == "OFF1") {
      digitalWrite(relayPin1, LOW);
      client.publish(topicStatus, "relay_off1");
    }
    else if (msg == "ON2") {
      digitalWrite(relayPin2, HIGH);
      client.publish(topicStatus, "relay_on2");
    }
    else if (msg == "OFF2") {
      digitalWrite(relayPin2, LOW);
      client.publish(topicStatus, "relay_off2");
    }
    else if (msg == "ON3") {
      digitalWrite(relayPin3, HIGH);
      client.publish(topicStatus, "relay_on3");
    }
    else if (msg == "OFF3") {
      digitalWrite(relayPin3, LOW);
      client.publish(topicStatus, "relay_off3");
    }
  }

  // ===== MODE (COMBOBOX) =====
  else if (String(topic) == topicMode) {
    Serial.print("MODE RAW: ");
    Serial.println(msg);
    client.publish(topicStatus, msg.c_str());
  }
}


// =========================
//      STEPPER
// =========================
/*
